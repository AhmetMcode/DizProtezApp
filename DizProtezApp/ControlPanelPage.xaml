                            <TextBlock Text="Pozisyona Git:" VerticalAlignment="Center" FontSize="22" HorizontalAlignment="Right" FontWeight="Bold" Foreground="#FF656565" />
                            <TextBox x:Name="Servo1TargetPositionInput" Width="84" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock Text="mm" VerticalAlignment="Center" FontSize="16" FontStyle="Italic" />
