                            Width="100" 
                            Height="30" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,10" />

                    <!-- Hata Kodu -->
                    <TextBlock Text="Hata Kodu: 000" 
                           FontSize="14" 
                           Foreground="Red" 
                           HorizontalAlignment="Center" />
                </StackPanel>
