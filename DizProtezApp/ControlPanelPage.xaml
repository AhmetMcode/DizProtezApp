      Title="ControlPanelPage" Width="auto">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Servo 1 -->
            <RowDefinition Height="*" />
            <!-- Servo 2 -->
            <RowDefinition Height="*" />
            <!-- Servo 3 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="61*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.RowSpan="3" Margin="0,5,5,5" Background="#ffffff" Padding="5" CornerRadius="10" BorderBrush="#dddddd" BorderThickness="1" >
            
            <StackPanel>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                    <Button Content="← Geri" FontSize="22" Width="100" Click="BackButton_Click" />
                </StackPanel>
                <TextBlock FontSize="38" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"><Run Language="tr-tr" Text="Sensör Verileri"/></TextBlock>

            </StackPanel>
        </Border>

