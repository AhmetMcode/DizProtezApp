                            <TextBlock Text="Servo Hız:" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF656565" />
                            <TextBox x:Name="Servo1SpeedInput" Width="200" Height="30" />
