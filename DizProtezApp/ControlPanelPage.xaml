                        <TextBlock Text="mm/s" VerticalAlignment="Center" FontSize="22" Margin="0,0,20,0" FontWeight="Bold" />
                        <Button Content="Geri Jog" Width="100" Height="40" Background="#555" Foreground="White" Click="GeriJog_Servo1_Button" FontSize="18" FontWeight="Bold" Margin="112,0,0,0" />
