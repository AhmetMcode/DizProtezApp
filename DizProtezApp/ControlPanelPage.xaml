                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Sol Taraf: Mevcut İtemler -->
                <StackPanel Grid.Column="0" Margin="0,0,0,10" HorizontalAlignment="Center" Width="618">
                    <TextBlock Text="Servo 1 - Alt Kızak" FontSize="24" FontWeight="Bold" Foreground="#FF0965CC" Width="300" HorizontalAlignment="Left" FontFamily="Segoe UI Black" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button Content="Etkinleştir" Width="170" Height="50" Background="#4CAF50" Foreground="White" Click="Etkinlestir_Servo1_Button" FontSize="22" FontWeight="Bold" />
                        <Button Content="Motor Durdur" Width="170" Height="50" Background="Red" Foreground="White" Click="MotorDurdur_Servo1_Button" FontSize="22" FontWeight="Bold" />
                        <Button Content="Motor Reset" Width="170" Height="50" Background="#FFC107" Foreground="White" Click="MotorReset_Servo1_Button" FontSize="22" FontWeight="Bold" />
                    </StackPanel>

                    <!-- Manuel Hız ve Pozisyon Gösterge -->
                    <StackPanel Orientation="Horizontal" Width="618" HorizontalAlignment="Left">
                        <TextBlock Text="Manuel Hız:" VerticalAlignment="Center" FontSize="22" Margin="0,0,10,0" FontWeight="Bold" Foreground="#FF656565" />
                        <TextBlock Text="0 mm/s" x:Name="Servo1SpeedText" FontSize="22" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" HorizontalAlignment="Center" />
